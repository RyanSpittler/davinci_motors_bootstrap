<div class="page-header">
  <%= link_to root_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Login</h1>
</div>
<div class="jumbotron">
  <div class="row">
    <div class="col-xs-3 center-block">
      <% @providers.each do |provider, string| %>
        <a id="login-<%= provider %>" class="btn btn-block btn-social btn-<%= provider == :google_oauth2 ? 'google-plus' : provider %>" href="/auth/<%= provider %>">
          <i class="fa fa-<%= provider == :google_oauth2 ? 'google-plus' : provider %>"></i> Log in via <%= string %>
        </a>
      <% end %>
    </div>

    <div class="col-xs-8 col-xs-offset-1">
      <%= form_tag login_path, class: 'form-horizontal' do %>
        <div class="form-group">
          <%= label_tag :email, 'Email', class: 'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Password', class: 'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <%= submit_tag 'Login', class: 'btn btn-primary' %>
            <%= link_to 'Back', root_path, class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
