<div class="page-header">
  <%= link_to root_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Login</h1>
</div>

<%= form_tag login_path, class: "form-horizontal", role: "form" do %>
  <div class="form-group">
    <%= label_tag :email, "Email", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :email, "Enter email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :password, "Enter password", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Login", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
