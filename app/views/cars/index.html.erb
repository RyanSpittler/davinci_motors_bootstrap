<div class="page-header">
  <%= link_to new_car_path, :class => 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Car
  <% end %>
  <h1>Listing Cars</h1>
</div>

<div class="cars">
  <%= will_paginate @cars, renderer: BootstrapPagination::Rails %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Make</th>
          <th>Model</th>
          <th>Year</th>
          <th>Price</th>
          <th></th>
          <% if current_user %><th></th><% end %>
        </tr>
      </thead>
  
      <tbody>
        <%= content_tag_for(:tr, @cars) do |car| %>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= number_to_currency(car.price) %></td>
          <td><%= link_to 'Show', car %></td>
          <% if current_user %>
            <td><%= link_to 'Claim', claim_car_path(car) %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
